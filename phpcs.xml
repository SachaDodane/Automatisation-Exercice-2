<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>The coding standard for our project.</description>
    <rule ref="PSR12"/>

    <file>src/</file>
    <file>config/</file>
    <file>public/</file>

    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/cache/*</exclude-pattern>
    <exclude-pattern>*/logs/*</exclude-pattern>
</ruleset>
